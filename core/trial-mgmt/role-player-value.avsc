{
  "type": "record",
  "name": "PhaseMessage",
  "namespace": "eu.driver.model.tm",
  "doc": "This is the message for phase information.",
  "fields": [
    {
      "name": "id",
      "doc": "The unique ID of the message",
      "type": "string"
    },
    {
      "name": "type",
      "type": {
        "name": "Type",
        "namespace": "eu.driver.model.tm",
        "type": "enum",
        "symbols": ["CALL", "ACTION", "MESSAGE", "MAIL", "TWEET"]
      },
      "doc": "The type of role play."
    },
    {
      "name": "title",
      "doc": "The title of the role play message.",
      "type": "string"
    },
    {
      "name": "headline",
      "doc": "The headline of the role play message.",
      "type": "string"
    },
    {
      "name": "description",
      "doc": "The description of the role play message.",
      "type": "string"
    },
    {
      "name": "rolePlayerName",
      "doc": "The name of the person that has to handle the message.",
      "type": "string"
    },
    {
      "name": "participantNames",
      "doc": "The names of the person that have to receive the message.",
      "type": ["null", {"type": "array", "items": "string"}],
      "default": null
    },
    {
      "name": "state",
      "type": {
        "name": "RolePlayState",
        "namespace": "eu.driver.model.tm",
        "type": "enum",
        "symbols": ["SCHEDULED", "ON_HOLD", "IN_PROGRESS", "EXECUTED", "CANCELLED", "TIMEOUT"]
      },
      "doc": "The current role play state."
    },
    {
      "name": "comment",
      "doc": "An optional comment to the session state.",
      "type": ["null", "string"],
      "default": null
    }
  ]
}
